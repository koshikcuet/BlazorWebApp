<!-- Loader.razor -->
<div class="loader" style="display: @(IsLoading ? "block" : "none")">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p>Loading...</p>
</div>

@code {
    [Parameter]
    public bool IsLoading { get; set; }
}