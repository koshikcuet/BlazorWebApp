@typeparam TItem

<table class="table table-bordered w-100">

    @Header


    @if (Items != null)
    {
        
        @foreach (var item in Items)
        {
            @Row(item)
        }
        
    }
</table>


@code
{
    [Parameter]
    public RenderFragment<TItem> Row { get; set; }

    [Parameter]
    public List<TItem> Items { get; set; }

    [Parameter]
    public RenderFragment Header { get; set; }
}