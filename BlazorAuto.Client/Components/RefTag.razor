@if (display) {
    <div class="modal fade show" id="myModal" aria-modal="true" role="dialog" tabindex="-1" style="display:block">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Hide" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Hide">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
   
}

@code {
    bool display = false;
    [Parameter]
    public string Title { get; set; } = "";
    public void Show()
    {
        display = true;
        StateHasChanged();
    }
    public void Hide()
    {
        display = false;
        StateHasChanged();
    }
}
